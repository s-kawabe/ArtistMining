<div class="like-button_ ml-3 text-center">
  <%# ログイン中 %>
  <% if current_user %>
    <strong>いいね！</strong>- Tap here!<br>
    <%# いいね済 %> 
    <% if current_user.favoriting?(artist) %>
      <div class="LikesIcon d-inline-block rounded-circle p-3 mt-2 on">
        <%= link_to(artist_favorite_path(@show_artist, artist.id), method: :delete, remote: true) do %>
          <i class="fas fa-heart LikesIcon-fa-heart heart"></i>
        <% end %>
      </div>
    <%# 未いいね %>
    <% else %>
      <div class="LikesIcon d-inline-block rounded-circle p-3 mt-2">
        <%= link_to(artist_favorites_path(@show_artist), method: :post, remote: true) do %>
          <i class="far fa-heart LikesIcon-fa-heart"></i>
        <% end %>
      </div>
    <% end %>
    <span class="font-weight-bold m-2 h4"><%= artist.favorites.count %></span>

  <%# 未ログイン %>
  <% else %>
    <div class="alert alert-light">
      <strong class="d-block">ログインしてお気に入り登録</strong>
        <%= link_to 'ログイン', login_path, class: 'nav-item btn btn-outline-primary m-1 mt-3' %>
    </div>
  <% end %>

  <%# TODO: いいねの数表示 %>
</div>